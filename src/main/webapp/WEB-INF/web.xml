  <context-param>
    <param-name>smtp.port</param-name>
    <param-value>587</param-value>
  </context-param>

  <context-param>
    <param-name>smtp.user</param-name>
    <param-value>a.garcia@afgen.es</param-value>
  </context-param>

  <context-param>
    <param-name>smtp.pass</param-name>
    <param-value>861WQhV1</param-value>
  </context-param>

</web-app>
